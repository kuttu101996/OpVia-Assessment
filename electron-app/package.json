{
  "name": "teacher-dashboard-electron",
  "version": "1.0.0",
  "description": "Teacher Dashboard Desktop Application",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && tsc -p electron.tsconfig.json",
    "dist": "npm run electron-build && electron-builder",
    "start": "npm run electron-dev"
  },
  "keywords": ["electron", "react", "typescript", "teacher", "dashboard"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^27.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "axios": "^1.5.0",
    "react-hook-form": "^7.45.4",
    "@hookform/resolvers": "^3.3.1",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.5.9",
    "@vitejs/plugin-react": "^4.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1",
    "electron-is-dev": "^2.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.teacherdashboard.app",
    "productName": "Teacher Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "dist/main.js",
      "node_modules/**/*"
    ]
  }
}
